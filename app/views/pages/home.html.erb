  <div id="reg-box">
    <h2> Join Us, It's never too late </h2>
    <%= form_for(:user, :url => session_path(:user)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: "person@example.com", required: true %>
      </div>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "Full Name (if blank it will be saved as anonymous)", required: true%>
      </div>
      <div class="p-group">
        <%= f.password_field :password, class: 'form-control', placeholder: "Password (Minimum 6 letters)", required: true %>
      </div>
      <div class="p-group">
        <%= f.password_field :password_confirmation , class: 'form-control', placeholder: "Password Confirmation", required: true %>
      </div>
      <div class="select-group">
        <%= f.select(:category, [['Patient', 'patient'], ['Caregiver', 'caregiver']]) %>
      </div>
      <%= f.submit :submit %>
    <% end %>
  </div>
</section>
